FROM google/dart:2.8 AS dart-runtime

RUN apt-get update

WORKDIR /code_tanks

RUN curl -fsSL https://github.com/vishnubob/wait-for-it/raw/master/wait-for-it.sh -o wait-for-it.sh
RUN chmod 777 /code_tanks/wait-for-it.sh

COPY pubspec.* /code_tanks
RUN pub get

COPY . /code_tanks
RUN pub get --offline

